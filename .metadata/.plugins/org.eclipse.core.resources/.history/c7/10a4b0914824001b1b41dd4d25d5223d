package br.com.formula1.modelo;

import javax.swing.JOptionPane;

public class Carro {

	// Sintaxe do método no Java
	// <modificador> <Tipo do Retorno> <Nome do método> () (<Tipo do Param <nome do Param>) {

	private String escuderia;
	private short numero;
	private String cor;
	private float velocidadeAtual;
	private float valor;
	private boolean status;

	//preencher valor e retornar promoção
	public void preencherValor(float parametro) { 
		valor=parametro;
	}
	public float retornarPromocao() {
		return valor * (float) 0.9;
	}	
	//Preencher basico
	public void preencherbasico(short parametro1, String parametro2, float parametro3 ) { 
		numero=parametro1;
		escuderia=parametro2;
		valor=parametro3;
	}
	//Exibir tudo
	public String exibirTudo() {
		String variavel = "LIGADO";
		if (status==false ) {
			variavel="DESLIGADO";
		}
		return
					"Escuderia: " + escuderia + "\n" +
					"Numero: " + numero + "\n" +
					"Cor: " + cor + "\n" +
					"Velocidade: " + velocidadeAtual + "\n" +
					"Valor: " + valor + "\n" +
					"Status: " + variavel;
	}	
	//preencher e retornar escuderia
	public String retornarEscuderia() {
		return escuderia;
	}
	public void preencherEscuderia(String parametro) { 
		escuderia=parametro.toUpperCase();
	}
	//preencher e retornar numero	
	public void preencherNumero(short parametro) {
		if (parametro>0) {
			numero=parametro;
		} 
	}
	public short retornarNumero() {
		return numero;
	}
	//Retornar status do veiculo
	public String desligar() {
		status=false;
		return "Desligado";
	}

	public String ligar() {
		status=true;
		return "Ligado";

	}
}
